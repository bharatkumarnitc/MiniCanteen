<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Admin_Login"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Login"
            android:textSize="40dp"
            android:layout_marginTop="30dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/Admin_login_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Admin Id"
            android:inputType="text"
            android:textColor="#000"
            android:background="#f0f0f4"
            android:padding="12dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="16dp"
            />

        <EditText
            android:id="@+id/Admin_login_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="320dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="#f0f0f4"
            android:drawableLeft="@drawable/passwordd"
            android:drawablePadding="16dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="#000" />
        <Button
            android:id="@+id/admin_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnformate"
            android:layout_marginTop="400dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:textAlignment="center"
            android:padding="14dp"
            android:gravity="center"
            android:text="Sign In"
            android:textSize="16dp"
            android:textColor="#fff"
            />

        <TextView
            android:id="@+id/Admin_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register"
            android:textColor="#123"
            android:textSize="20dp"
            android:layout_marginTop="520dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            />





    </RelativeLayout>

</LinearLayout>